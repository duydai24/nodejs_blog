<div class='m-5'>
  <h1 class='my-5'>Cập nhật khóa học</h1>
  <form method='POST' action='/courses/{{courses._id}}?_method=PUT'>
    <div class='form-group'>
      <label for='name'>Tên</label>
      <input
        type='text'
        class='form-control'
        value='{{courses.name}}'
        id='name'
        name='name'
        placeholder='Enter tên'
      />
    </div><div class='form-group'>
      <label for='description'>Mô tả khóa học</label>
      <textarea
        type='text'
        class='form-control'
        id='description'
        name='description'
        placeholder='Enter description'
      >{{courses.description}}</textarea>
    </div>
    <button type='submit' class='btn btn-primary'>Lưu khóa học</button>
  </form>
</div>