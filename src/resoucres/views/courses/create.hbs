<div class='m-5'>
  <form method='POST' action='/courses/store'>
    <div class='form-group'>
      <label for='name'>Tên</label>
      <input
        type='text'
        class='form-control'
        id='name'
        name='name'
        placeholder='Enter tên'
      />
    </div>
    <div class='form-group'>
      <label for='image'>Ảnh khóa học</label>
      <input
        type='text'
        class='form-control'
        id='image'
        name='image'
        placeholder='Enter image'
      />
    </div>
    <div class='form-group'>
      <label for='description'>Mô tả khóa học</label>
      <input
        type='text'
        class='form-control'
        id='description'
        name='description'
        placeholder='Enter description'
      />
    </div>
    <button type='submit' class='btn btn-primary'>Thêm khóa học</button>
  </form>
</div>