<div class='m-5'>
  <h1 class='my-5'>Cấp quyền quản trị</h1>
  <form method='POST' action='/users/{{user._id}}?_method=PUT'>
    <div style="display: flex;" class='form-group'>
      <label for='name'>Tên người dùng:</label>
      <p style="font-weight: bold; margin-left: 10px;">{{user.name}}</p>
    </div>
    <div class='form-group'>
      <label for='image'>Ảnh người dùng: </label>
      <img id='previewImage' style='border-radius: 20px' src="{{user.image}}" alt="User Image"
        width="auto"
        height="auto">
    </div>
    <div style="display: flex;" class='form-group'>
      <label for='name'>Quyền hiện tại:</label>
      <p style="font-weight: bold; margin-left: 10px;">{{user.role}}</p>
    </div>
    <div class="form-group">
      <select
        style="outline: none;"
        class='form-select form-select-sm'
        aria-label='.form-select-lg example'
        name="role"
        id="role"
        required="true">
        <option value> -- Chọn quyền quản trị --</option>
        <option value='user'>user</option>
        <option value='editer'>editer</option>
      </select>
    </div>
    <button type='submit' class='btn btn-primary'>Lưu quyền hạn</button>
  </form>
</div>

